{
  "name": "react-native-simple-scanner",
  "version": "0.3.0",
  "description": "A lightweight and simple barcode/QR code scanner for React Native",
  "workspaces": [
    "example"
  ],
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./mocks": {
      "source": "./src/mocks/jest.ts",
      "types": "./src/mocks/jest.ts",
      "default": "./src/mocks/jest.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "pnpm --filter react-native-simple-scanner-example",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "husky && bob build",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "size-limit": "size-limit",
    "size-limit:check": "size-limit --json",
    "docs": "typedoc"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "barcode",
    "qr",
    "qrcode",
    "scanner"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bon-clevique/react-native-simple-scanner.git"
  },
  "author": "Clevique <bon@clevique.app> (https://github.com/bon-clevique)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bon-clevique/react-native-simple-scanner/issues"
  },
  "homepage": "https://github.com/bon-clevique/react-native-simple-scanner#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@react-native/babel-preset": "0.83.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.2.8",
    "del-cli": "^7.0.0",
    "eslint": "^9.35.0",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.8.1",
    "react": "19.2.3",
    "react-native": "0.83.1",
    "react-native-builder-bob": "^0.40.17",
    "react-test-renderer": "19.2.3",
    "size-limit": "^11.2.0",
    "typedoc": "^0.28.16",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.53.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "packageManager": "pnpm@10.26.0",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "SimpleScannerViewSpec",
    "type": "all",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.simplescanner"
    },
    "ios": {
      "componentProvider": {
        "SimpleScannerView": "SimpleScannerView"
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "create-react-native-library": {
    "type": "fabric-view",
    "languages": "kotlin-objc",
    "tools": [
      "eslint"
    ],
    "version": "0.56.0"
  },
  "size-limit": [
    {
      "path": "lib/module/index.js",
      "limit": "2 KB"
    }
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4"
  }
}
